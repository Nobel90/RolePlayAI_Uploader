{
  "name": "role-play-ai-uploader",
  "version": "1.0.0",
  "description": "Role-Play-AI Uploader - Package preparation and R2 upload tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:release": "powershell -ExecutionPolicy Bypass -File build-signed.ps1"
  },
  "keywords": [
    "electron",
    "uploader",
    "r2",
    "cloudflare"
  ],
  "author": "VR Centre Pty Ltd",
  "license": "ISC",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "Nobel90",
      "repo": "Role-Play-AI_Uploader",
      "private": false
    },
    "appId": "com.role-play-ai.uploader",
    "productName": "Role-Play-AI-Uploader",
    "afterSign": "scripts/sign-app.js",
    "afterAllArtifactBuild": "scripts/sign-installer.js",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-white_s.ico",
      "signAndEditExecutable": true,
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ]
      }
    },
    "artifactName": "${productName}-${version}-portable.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!*.md",
      "!*.ps1",
      "!*.bat",
      "!test-server*.js",
      "!generate-*.js",
      "!sign.js",
      "!unused-temp-files/**/*",
      "!memory-bank/**/*",
      "!memory--bank/**/*",
      "!sign-utils.js"
    ],
    "asarUnpack": [
      "**/node_modules/electron-updater/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  }
}
